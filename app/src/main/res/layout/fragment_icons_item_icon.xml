<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/icon_container_height"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="@dimen/icon_image_size"
        android:layout_height="@dimen/icon_image_size"
        android:tint="@color/material_icon"
        tools:src="@drawable/ic_face"/>

    <TextView
        android:id="@+id/icon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/icon_name_horizontal_margin"
        android:layout_marginStart="@dimen/icon_name_horizontal_margin"
        android:layout_marginRight="@dimen/icon_name_horizontal_margin"
        android:layout_marginEnd="@dimen/icon_name_horizontal_margin"
        android:layout_marginTop="@dimen/icon_name_margin_top"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textColor="@color/material_icon"
        android:textSize="@dimen/icon_name_font_size"
        tools:text="face"/>

</LinearLayout>